
<head>
    <link href="~/css/checkout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Грешка!</strong> @TempData["ErrorMessage"]
    </div>
}

<div class="row">
  <div class="col-75">

        <form method="POST" action="@Url.Action("SaveOrderDetails", "User")">
      
        <div class="row">
          <div class="col-50">
            <h3>Адрес за доставка</h3>
            <label for="fname"><i class="fa fa-user"></i> Трите имена</label>
            <input type="text" id="fname" name="firstname" placeholder="John M. Doe">
            <label for="email"><i class="fa fa-envelope"></i> Имейл</label>
            <input type="text" id="email" name="email" placeholder="john@example.com">
            <label for="adr"><i class="fa fa-address-card-o"></i> Адрес</label>
            <input type="text" id="adr" name="address" placeholder="542 W. 15th Street">
            <label for="city"><i class="fa fa-institution"></i> Град</label>
            <input type="text" id="city" name="city" placeholder="New York">

            <div class="row">
              <div class="col-50">
                <label for="state">Държава</label>
                <input type="text" id="state" name="state" placeholder="NY">
              </div>
              <div class="col-50">
                <label for="zip">Zip код</label>
                <input type="text" id="zip" name="zip" placeholder="10001">
              </div>
            </div>
          </div>

          <div class="col-50">
            <h3>Плащане</h3>
            <label for="fname">Приемащи карти</label>
            <div class="icon-container">
              <i class="fa fa-cc-visa" style="color:navy;"></i>
              <i class="fa fa-cc-amex" style="color:blue;"></i>
              <i class="fa fa-cc-mastercard" style="color:red;"></i>
              <i class="fa fa-cc-discover" style="color:orange;"></i>
            </div>
            <label for="cname">Собственик на картата</label>
            <input type="text" id="cname" name="cardname" placeholder="John More Doe">
            <label for="ccnum">Номер на картата</label>
            <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
            <label for="expmonth">Изтичащ месец</label>
            <input type="text" id="expmonth" name="expmonth" placeholder="September">
            <div class="row">
              <div class="col-50">
                <label for="expyear">Изтичаща година</label>
                <input type="text" id="expyear" name="expyear" placeholder="2018">
              </div>
              <div class="col-50">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="352">
              </div>
            </div>
          </div>
          
        </div>
        <label>
                <input type="checkbox" checked="checked" name="sameadr"> Адрес за доставка, еднакъв с този за фактуриране
        </label>
        <input type="submit" value="Продължаване напред" class="btn">
      </form>
    
  </div>
  <div class="col-25">
    <div class="container">
      <h4>Продукти <span class="price" style="color:white"><i class="fa fa-shopping-cart"></i> <b>@ViewData["ItemCount"]</b></span></h4>
     
      <hr>
            <p class="total">Общо <span class="price" style="color:white"><b>$@ViewData["Price"]</b></span></p>
    </div>
  </div>
</div>

