@model List<EcommerceApp.Models.ProductReview>
<head>
    <style>
        h1{
            text-align:center;
            color:white;
        }
        body{
            background-image: url('/Backgrounds/ProductsBackground.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            margin: 0;
        }
        .Forms
        {
            margin: auto;
        }
        .Description
        {
            margin-left:350px;
          
        }
       
    </style>
</head>
<h1>Ревюта</h1>

@if (Model.Count == 0)
{
    <p>No reviews yet.</p>
}
else
{
        <div class="Forms">
        @foreach (var review in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="Description">Description:</h5>
                        <p class="Description">@review.Description</p>
                        <img src="~/Images/Anonymous.png" alt="user" width="200" height="200">
                        <h5 class="card-title">@review.User.UserName</h5>
                        
                        <p class="card-text"><small class="text-muted">Rating: @review.Grade</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
}

