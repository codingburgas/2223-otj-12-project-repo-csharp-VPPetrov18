@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="~/css/index.css" rel="stylesheet" />
</head>





<div class="video-container">
    <video autoplay muted loop id="myVideo">
        <source src="@Url.Content("~/Backgrounds/video2.mp4")" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>

    <div class="content">
        @if (!User.Identity.IsAuthenticated)
        {


            <div class="blur"></div>
            <div class="popup">
                <img src="@Url.Content("~/Images/DiscountPopUp.png")" alt="Pop Up Image">
                <span class="close">&times;</span>
            </div>

        }
        <div class="content-center">
            <a href="@Url.Action("Products", "User")" class="shop-link">
        <img src="@Url.Content("~/Images/logo2.gif")" alt="Logo" style="width:248px;height:248px;">
        </a>
        <h2>
           
            <a href="@Url.Action("Products", "User")" class="shop-link">[ВЛЕЗ]</a>
        </h2>
        </div>

        </div>
 
   
</div>
<div class="navCont">
   <h5><a href="@Url.Action("Products", "User")" class="shop-downlink">ПРОДУКТИ</a></h5>
    <h5><a href="@Url.Action("Sizing", "User")" class="shop-downlink">РАЗМЕРИ</a></h5>
    <h5><a href="@Url.Action("Policies", "User")" class="shop-downlink">ПОЛИТИКА</a></h5>
</div>
           


@section Scripts {
        <script>
        var popup = document.querySelector(".popup");
        var blur = document.querySelector(".blur");
        var close = document.querySelector(".close");

        close.addEventListener("click", function () {
            popup.style.display = "none";
            blur.style.display = "none";
        });

        blur.addEventListener("click", function () {
            popup.style.display = "none";
            blur.style.display = "none";
        });
      
            </script>
}
