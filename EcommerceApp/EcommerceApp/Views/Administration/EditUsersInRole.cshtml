@model List<UserRoleViewModel>


@{
    var roleId = ViewBag.roleId;

}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Добави или премахни потребители в тази роля</h2>
        </div>
        <div class="card-body">
            @for(int i=0;i<Model.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].isSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].isSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Актуализарай" class="btn btn-primary" style"width:auto" onclick="this.value='Update';" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-secondary" style="width:auto">Отмяна</a>
        </div>
    </div>
    

</form>
